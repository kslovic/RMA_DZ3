<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/taskPadding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/ivTaskPrirority"
        android:layout_width="@dimen/imageSize"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"

        />
    <TextView
        android:id="@+id/tvTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivTaskPrirority"
        android:textColor="@color/text"
        android:textSize="@dimen/taskTitleSize"
/>

    <TextView
        android:id="@+id/tvTaskContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTaskTitle"
        android:layout_toRightOf="@+id/ivTaskPrirority"
        android:textColor="@color/text"
        android:textSize="@dimen/taskContentSize"
        />
</RelativeLayout>
